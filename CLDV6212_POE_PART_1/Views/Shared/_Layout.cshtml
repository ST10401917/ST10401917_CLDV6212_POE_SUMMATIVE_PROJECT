<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CLDV6212_POE_PART_1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CLDV6212_POE_PART_1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Pixel Heaven</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">

                    @* FIXED SESSION KEY *@
                    @{
                        var role = Context.Session.GetString("Role");
                    }

                    <ul class="navbar-nav ms-auto">
                        @*  Always show Home *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @*  NOT LOGGED IN: Only show Login *@
                        @if (string.IsNullOrEmpty(role))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Login" asp-action="Index">Login</a>
                            </li>
                        }
                        else if (role == "Admin")
                        {
                            @*  ADMIN FULL ACCESS *@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Customer" asp-action="Index">Customers Center</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Product" asp-action="Index">Browse Products</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Order" asp-action="Index">Placing an Order</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Files" asp-action="Index">Upload Contracts</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Contact">Contact Us</a>
                            </li>
                        }
                        else if (role == "Customer")
                        {
                            @*  CUSTOMER ACCESS ONLY TO BROWSE PRODUCTS *@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Product" asp-action="Index">Browse Products</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">My Cart</a>
                            </li>

                        }

                        @*  ONLY show Logout if logged in *@
                        @if (!string.IsNullOrEmpty(role))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Login" asp-action="Logout">Logout</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Profile">My Account</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 Pixel Heaven Corp
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
