@model IEnumerable<CLDV6212_POE_PART_1.ViewModels.OrderViewModel>

@{
    ViewData["Title"] = "Your Cart";
}

<h2 class="text-center my-4">Your Cart</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Order Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Total_Amount.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-ZA"))</td>
                <td>@item.Order_Date.ToString("yyyy/MM/dd")</td>
                <td>
                    @if (item.Status == "PROCESSED")
                    {
                        <span class="badge bg-success">@item.Status</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">@item.Status</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
